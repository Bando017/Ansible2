<VirtualHost *:80>
  ServerAdmin webmaster@{{ ansible_fqdn }}
  ServerName {{ ansible_fqdn }}
  DocumentRoot "/var/www/vhosts/{{ ansible_hostname }}"
  ServerAlias example.com
  ErrorLog "/var/log/httpd/ansible1.example.com-error_log"
  CustomLog "/var/log/httpd/ansible1.example.com-access_log" common
  <Directory /var/www/vhosts/ansible1.example.com>
    Options Indexes FollowSymlinks 
    AllowOverride None
    Require all granted
  </Directory>
</VirtualHost>